[{"id":1,"text":"\u6211\u5011\u6240\u50b3\u7684\u3001\u3014\u6216\u4f5c\u6240\u50b3\u8207\u6211\u5011\u7684\u3015\u6709\u8ab0\u4fe1\u5462\uff0e\u8036\u548c\u83ef\u7684\u8180\u81c2\u5411\u8ab0\u986f\u9732\u5462\u3002"},{"id":2,"text":"\u4ed6\u5728\u8036\u548c\u83ef\u9762\u524d\u751f\u9577\u5982\u5ae9\u82bd\u3001\u50cf\u6839\u51fa\u65bc\u4e7e\u5730\uff0e\u4ed6\u7121\u4f73\u5f62\u7f8e\u5bb9\u3001\u6211\u5011\u770b\u898b\u4ed6\u7684\u6642\u5019\u3001\u4e5f\u7121\u7f8e\u8c8c\u4f7f\u6211\u5011\u7fa8\u6155\u4ed6\u3002"},{"id":3,"text":"\u4ed6\u88ab\u85d0\u8996\u3001\u88ab\u4eba\u53ad\u68c4\u3001\u591a\u53d7\u75db\u82e6\u3001\u5e38\u7d93\u6182\u60a3\u3002\u4ed6\u88ab\u85d0\u8996\u3001\u597d\u50cf\u88ab\u4eba\u63a9\u9762\u4e0d\u770b\u7684\u4e00\u6a23\uff0e\u6211\u5011\u4e5f\u4e0d\u5c0a\u91cd\u4ed6\u3002"},{"id":4,"text":"\u4ed6\u8aa0\u7136\u64d4\u7576\u6211\u5011\u7684\u6182\u60a3\u3001\u80cc\u8ca0\u6211\u5011\u7684\u75db\u82e6\uff0e\u6211\u5011\u537b\u4ee5\u70ba\u4ed6\u53d7\u8cac\u7f70\u3001\u88ab\u3000\u795e\u64ca\u6253\u82e6\u5f85\u4e86\u3002"},{"id":5,"text":"\u90a3\u77e5\u4ed6\u70ba\u6211\u5011\u7684\u904e\u72af\u53d7\u5bb3\u3001\u70ba\u6211\u5011\u7684\u7f6a\u5b7d\u58d3\u50b7\uff0e\u56e0\u4ed6\u53d7\u7684\u5211\u7f70\u6211\u5011\u5f97\u5e73\u5b89\uff0e\u56e0\u4ed6\u53d7\u7684\u97ad\u50b7\u6211\u5011\u5f97\u91ab\u6cbb\u3002"},{"id":6,"text":"\u6211\u5011\u90fd\u5982\u7f8a\u8d70\u8ff7\u3001\u5404\u4eba\u504f\u884c\u5df1\u8def\uff0e\u8036\u548c\u83ef\u4f7f\u6211\u5011\u773e\u4eba\u7684\u7f6a\u5b7d\u90fd\u6b78\u5728\u4ed6\u8eab\u4e0a\u3002"},{"id":7,"text":"\u4ed6\u88ab\u6b3a\u58d3\u3001\u5728\u53d7\u82e6\u7684\u6642\u5019\u537b\u4e0d\u958b\u53e3\uff0e\u3014\u6216\u4f5c\u4ed6\u53d7\u6b3a\u58d3\u537b\u81ea\u5351\u4e0d\u958b\u53e3\u3015\u4ed6\u50cf\u7f8a\u7f94\u88ab\u727d\u5230\u5bb0\u6bba\u4e4b\u5730\u3001\u53c8\u50cf\u7f8a\u5728\u526a\u6bdb\u7684\u4eba\u624b\u4e0b\u7121\u8072\u3001\u4ed6\u4e5f\u662f\u9019\u6a23\u4e0d\u958b\u53e3\uff0e"},{"id":8,"text":"\u56e0\u53d7\u6b3a\u58d3\u548c\u5be9\u5224\u4ed6\u88ab\u596a\u53bb\uff0e\u81f3\u65bc\u4ed6\u540c\u4e16\u7684\u4eba\u3001\u8ab0\u60f3\u4ed6\u53d7\u97ad\u6253\u3001\u5f9e\u6d3b\u4eba\u4e4b\u5730\u88ab\u526a\u9664\u3001\u662f\u56e0\u6211\u767e\u59d3\u7684\u7f6a\u904e\u5462\u3002"},{"id":9,"text":"\u4ed6\u96d6\u7136\u672a\u884c\u5f37\u66b4\u3001\u53e3\u4e2d\u4e5f\u6c92\u6709\u8a6d\u8a50\u3001\u4eba\u9084\u4f7f\u4ed6\u8207\u60e1\u4eba\u540c\u57cb\uff0e\u8ab0\u77e5\u6b7b\u7684\u6642\u5019\u8207\u8ca1\u4e3b\u540c\u846c\u3002"},{"id":10,"text":"\u8036\u548c\u83ef\u537b\u5b9a\u610f\u3014\u6216\u4f5c\u559c\u6085\u3015\u5c07\u4ed6\u58d3\u50b7\u3001\u4f7f\u4ed6\u53d7\u75db\u82e6\uff0e\u8036\u548c\u83ef\u4ee5\u4ed6\u70ba\u8d16\u7f6a\u796d\uff0e\u3014\u6216\u4f5c\u4ed6\u737b\u672c\u8eab\u70ba\u8d16\u7f6a\u796d\u3015\u4ed6\u5fc5\u770b\u898b\u5f8c\u88d4\u3001\u4e26\u4e14\u5ef6\u9577\u5e74\u65e5\u3002\u8036\u548c\u83ef\u6240\u559c\u6085\u7684\u4e8b\u3001\u5fc5\u5728\u4ed6\u624b\u4e2d\u4ea8\u901a\u3002"},{"id":11,"text":"\u4ed6\u5fc5\u770b\u898b\u81ea\u5df1\u52de\u82e6\u7684\u529f\u6548\u3001\u4fbf\u5fc3\u6eff\u610f\u8db3\uff0e\u6709\u8a31\u591a\u4eba\u3001\u56e0\u8a8d\u8b58\u6211\u7684\u7fa9\u50d5\u5f97\u7a31\u70ba\u7fa9\uff0e\u4e26\u4e14\u4ed6\u8981\u64d4\u7576\u4ed6\u5011\u7684\u7f6a\u5b7d\u3002"},{"id":12,"text":"\u6240\u4ee5\u6211\u8981\u4f7f\u4ed6\u8207\u4f4d\u5927\u7684\u540c\u5206\u3001\u8207\u5f37\u76db\u7684\u5747\u5206\u64c4\u7269\uff0e\u56e0\u70ba\u4ed6\u5c07\u547d\u50be\u5012\u3001\u4ee5\u81f4\u65bc\u6b7b\uff0e\u4ed6\u4e5f\u88ab\u5217\u5728\u7f6a\u72af\u4e4b\u4e2d\uff0e\u4ed6\u537b\u64d4\u7576\u591a\u4eba\u7684\u7f6a\u3001\u53c8\u70ba\u7f6a\u72af\u4ee3\u6c42\u3002"}]